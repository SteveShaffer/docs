{
  "name": "veritone-docs",
  "description": "Veritone Docs",
  "version": "1.0.0",
  "main": "n/a",
  "scripts": {
    "build": "sh ./schemagen.sh && rm -rf build-${ENVIRONMENT:-local} && mkdir build-${ENVIRONMENT:-local} && cp -r docs/* build-${ENVIRONMENT:-local}/",
    "lint": "./node_modules/.bin/markdownlint --ignore \"docs/apis/search-quickstart.md\" docs/**/*.md",
    "start": "./node_modules/.bin/docsify serve ./docs",
    "test": "echo \"tests temporarily disabled\" && true  # ./node_modules/.bin/codeceptjs run --reporter mocha-multi",
    "test:full": "yarn && yarn build && HTTP_PORT=3333 yarn test",
    "test:only": "E2E_SKIP_BOOTSTRAP=true yarn test",
    "test:report": "E2E_GENERATE_REPORT=true yarn test:full; ./node_modules/.bin/allure serve test/e2e/output"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:full"
    }
  },
  "devDependencies": {
    "allure-commandline": "^2.9.0",
    "codeceptjs": "^2.0.7",
    "docsify": "^4.6.7",
    "docsify-cli": "^4.2.0",
    "get-graphql-schema": "^2.1.1",
    "husky": "^1.3.1",
    "markdownlint-cli": "^0.14.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi": "^1.0.1",
    "puppeteer": "^1.13.0"
  }
}
